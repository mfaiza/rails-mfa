<h1 class="text-center mt-4">Create a New Category</h1>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <%= render 'shared/errors', obj: @category %>
            <%= form_with model: @category, class: "shadow p-3 mb-4 bg-info rounded", local: true do |f| %>
                <div class="form-group row">
                    <%= f.label :name, "Category Name", class: "col-sm-2 col-form-label text-light" %>
                    <div class="col-sm-10">
                        <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name of category" %>
                    </div>
                </div>

                <div class="form-group row justify-content-center">
                    <%= f.submit class: "btn btn-outline-light btn-lg" %>       
                </div>
            <% end %>
            
        </div>
    </div>
</div>
