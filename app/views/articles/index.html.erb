<h1 class="heading-title">List of Article</h1>

<p>
<%= link_to 'New Article', new_article_path %>
</p>
<table border="1" class="table table-bordered">
    <thead align="center">
        <tr>
            <th>No</th>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3">Action</th>
        </tr>
    </thead>
    <tbody>
        <% @articles.each_with_index do |article, index| %>
          <tr>
            <td align="center"><%= index+=1 %></td>
            <td><%= article.title %></td>
            <td><%= article.body %></td>
            <td> <%= link_to 'Detail', article_path(article), class: "btn btn-outline-primary btn-max" %> </td>
            <td><%= link_to 'Edit', edit_article_path(article.id), class: "btn btn-outline-warning btn-max"%></td>
            <td><%= link_to 'Destroy', article_path(article), class: "btn btn-outline-danger btn-max", method: :delete, data:{confirm: "Are you sure?"}  %></td>
          </tr>
        <% end %>
    </tbody>
</table>
  