<h1 class="text-center mt-4">List of Article</h1>

<div class="row justify-content-center">
  <div class="col-6 pt-4">
    <%= form_tag articles_path, method: :get do %>  
      <div class="form-group row ">
        <%= text_field_tag :title, params[:title], placeholder: "Search title", class: "form-control col-lg-4" %>
        <div class="col-sm-2">
          <%= submit_tag "Search", class: "btn btn-primary", name: nil %>
        </div>
        <%= text_field_tag :body, params[:body], placeholder: "Search body", class: "form-control col-lg-4" %>
        <div class="col-sm-2">
          <%= submit_tag "Search", class: "btn btn-primary", name: nil %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="flickr_pagination">
  <%= will_paginate @articles, container: false %>
</div>

