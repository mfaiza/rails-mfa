<br> <%= link_to 'Back', articles_path  %> <br>
<h1 class="heading-title">Edit a article</h1>

<% if @article.errors.any? %>
    <h2><%= @article.errors.count %> Errors Detected: </h2>
    <ul>
        <% @article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

<%= form_with model: @article, local: true do |f| %>
    <p>
        <%= f.label :title %> <br>
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :body %> <br>
        <%= f.text_area :body %>
    </p>
    <p>
        <%= f.submit %>
    </p>
    
<% end %>
