<h1 class="text-center mt-4"> <%= @user.username %>'s profile</h1>

<%= gravatar_for @user, size: 200 %>

<% if logged_in? and @user == current_user %>
  <div class="text-center mt-4">
    <%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-outline-warning"  %>
  </div>
<% end %>

<div class="flickr_pagination mt-4">
  <%= will_paginate @articles, container: false %>
</div>
<h3 class="text-center mt-4">Articles</h3>

<%= render 'articles/articles' %>

<div class="flickr_pagination mt-4">
  <%= will_paginate @articles, container: false %>
</div>